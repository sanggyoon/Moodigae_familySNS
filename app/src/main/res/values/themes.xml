<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FamilySNS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/button_text_blue</item>
        <item name="colorPrimaryVariant">@color/button_text_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/button_text_blue</item>
        <item name="colorSecondaryVariant">@color/button_text_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="Theme.FamilySNS" parent="Base.Theme.FamilySNS" />
    
    <!-- 컴포넌트 스타일들 -->
    <style name="CreateChannelTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#101010</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.96sp</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>
    
    <style name="ChannelTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#262626</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.96sp</item>
        <item name="android:gravity">top</item>
    </style>


    <!-- 채널 id 커스텀 스타일 -->
    <style name="channel_creat_id">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#262626</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.96sp</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>
    
    <!-- 채널 코드 커스텀 스타일 -->
    <style name="text_channel_creat_code">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#262626</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.96sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <!-- BottomNavigationView 커스텀 스타일 -->
    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">60dp</item>
        <item name="itemTextAppearanceActive">@style/CustomBottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationTextAppearance</item>
        <item name="itemRippleColor">@color/icon_active</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <!-- BottomNavigationView 텍스트 스타일 -->
    <style name="CustomBottomNavigationTextAppearance" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/icon_active</item>
    </style>

    <!-- Material Design 컴포넌트 커스텀 스타일들 -->
    
    <!-- 그라데이션 버튼 스타일 -->
    <style name="CustomGradientButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_gradient_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- 흰색 버튼 스타일 -->
    <style name="CustomWhiteButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/button_text_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/button_text_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- 기본 버튼 스타일 -->
    <style name="CustomDefaultButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!-- 입력 필드 스타일 -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/button_text_blue</item>
        <item name="hintTextColor">@color/button_text_blue</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- 입력 필드 내부 EditText 스타일 -->
    <style name="CustomTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>