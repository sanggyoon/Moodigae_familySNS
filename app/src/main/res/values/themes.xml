<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FamilySNS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/button_text_blue</item>
        <item name="colorPrimaryVariant">@color/button_text_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/button_text_blue</item>
        <item name="colorSecondaryVariant">@color/button_text_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="Theme.FamilySNS" parent="Base.Theme.FamilySNS" />
    
    <!-- 컴포넌트 스타일들 -->
    <style name="CreateChannelTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#101010</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.96sp</item>
        <item name="android:gravity">center_horizontal|top</item>
    </style>
    
    <style name="ChannelTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#262626</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:translationY">-0.96sp</item>
        <item name="android:gravity">top</item>
    </style>

    <!-- BottomNavigationView 커스텀 스타일 -->
    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">60dp</item>
        <item name="itemTextAppearanceActive">@style/CustomBottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/CustomBottomNavigationTextAppearance</item>
        <item name="itemRippleColor">@color/icon_active</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <!-- BottomNavigationView 텍스트 스타일 -->
    <style name="CustomBottomNavigationTextAppearance" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/icon_active</item>
    </style>
</resources>