<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background">

    <!-- 메인 텍스트 -->
    <TextView
        android:id="@+id/tv_login_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="217dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/login_main_text"
        android:textAppearance="@style/LoginMainTextStyle"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.49sp"
        android:gravity="center_horizontal|top" />

    <!-- Google 로그인 버튼 -->
    <RelativeLayout
        android:id="@+id/btn_google_login"
        android:layout_width="372dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_google_login_button"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <!-- Google 로고 -->
        <ImageView
            android:id="@+id/iv_google_logo"    
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_google" />

        <!-- 로그인 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_google_logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/google_login"
            android:textColor="@color/login_title_color"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium" />

    </RelativeLayout>

    <!-- 가족 일러스트레이션 -->
    <View
        android:id="@+id/v_family_illustration"
        android:layout_width="412dp"
        android:layout_height="412dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/app_illustration" />

</RelativeLayout>