<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F5">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/invite_title"
        android:textSize="20sp"
        android:textColor="#101010"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 메인 콘텐츠 영역 -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 설명 텍스트 -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel_creat_id"
            android:textSize="16sp"
            android:textColor="#101010"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:fontFamily="@font/pretendard_regular" />

        <!-- 채널 ID 라벨 -->
        <TextView
            android:id="@+id/tv_channel_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/channel_id_label"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular" />

        <!-- 채널 ID (클릭 가능) -->
        <TextView
            android:id="@+id/tv_channel_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/channel_id_example"
            android:textSize="24sp"
            android:textColor="#3568D6"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:fontFamily="@font/pretendard_regular" />

    </LinearLayout>

    <!-- 버튼 영역을 include로 추가 -->
    <include
        android:id="@+id/button_prev_next"
        layout="@layout/fragment_button_prev_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>