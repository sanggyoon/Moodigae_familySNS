<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:minHeight="120dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="이미지" />

    <!-- 카메라 아이콘 (첫 번째 아이템용) -->
    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="gone"
        android:background="@android:color/white"
        android:padding="4dp"
        android:contentDescription="카메라" />

    <!-- 선택 표시 -->
    <ImageView
        android:id="@+id/selection_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:src="@drawable/icon_next_act"
        android:visibility="gone"
        android:background="@drawable/btn_gradient_blue"
        android:contentDescription="선택됨" />

</FrameLayout> 