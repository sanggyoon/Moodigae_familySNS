<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_channel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 제목을 상대적 위치로 변경 -->
    <TextView
        android:id="@+id/text_create_channel_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/create_channel_title"
        android:textAppearance="@style/CreateChannelTitleStyle"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.96sp"
        android:gravity="center_horizontal|top"
        app:layout_constraintWidth_percent="0.32"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <!-- 기존 LinearLayout -->
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="111dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintWidth_percent="0.89"
        app:layout_constraintHeight_percent="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 채널 이름 섹션 -->
        <TextView
            android:id="@+id/text_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/channel_name"
            android:textAppearance="@style/ChannelTitleStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"/>

        <RelativeLayout
            android:id="@+id/input_channel_name"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:clipToOutline="true"
            android:background="@drawable/input"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="16dp">

            <EditText
                android:id="@+id/edit_channel_input_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="채널 이름 입력"
                android:inputType="textPersonName"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:textSize="16sp"/>
        </RelativeLayout>

        <!-- 채널 비밀번호 섹션 -->
        <TextView
            android:id="@+id/text_channel_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/channel_password_setting"
            android:textAppearance="@style/ChannelTitleStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"/>

        <RelativeLayout
            android:id="@+id/input_channel_password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:clipToOutline="true"
            android:background="@drawable/input"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="16dp">

            <EditText
                android:id="@+id/edit_channel_input_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="채널 비밀번호 입력"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:textSize="16sp"/>
        </RelativeLayout>

        <!-- 가훈 섹션 -->
        <TextView
            android:id="@+id/text_family_motto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/family_motto_setting"
            android:textAppearance="@style/ChannelTitleStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"/>

        <RelativeLayout
            android:id="@+id/input_family_motto"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:clipToOutline="true"
            android:background="@drawable/input"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="16dp">

            <EditText
                android:id="@+id/edit_channel_input_motto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="가훈 입력"
                android:inputType="text"
                android:padding="16dp"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="뒤로"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>