<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_channel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_create_channel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족 채널 만들기"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_channel_input_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="채널 이름 입력"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/text_create_channel_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채널 비밀번호 설정"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_channel_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="채널 비밀번호 입력"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/text_create_motto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가훈"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_channel_input_motto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="가훈 입력"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="뒤로"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>